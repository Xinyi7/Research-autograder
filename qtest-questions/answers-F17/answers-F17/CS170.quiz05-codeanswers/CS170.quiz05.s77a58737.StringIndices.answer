public class StringIndices {

public static String indicies(String s, String pre, String post){
String result = "";
for(int i=0; i<s.length(); i++){
result = result + pre + i;

    
}
result = result + post;
return result;

    
}
    
    public static void main(String[] args) {
     System.out.println(indicies("abc", "--", "$"));
      System.out.println(indicies("hello", ".", "@#!"));
    }

}