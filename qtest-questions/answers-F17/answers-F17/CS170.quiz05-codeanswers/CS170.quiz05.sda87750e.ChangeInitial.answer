public class ChangeInitial {

    public static String changeInitial(String name, String init) { 
        String result = "";
        char c = init.charAt(0);
        String part = name.substring(1);
        result = c + part;
        return result;
    }
    
    public static void main(String[] args) {
        System.out.println(changeInitial("book", "h")); 
        System.out.println(changeInitial("cake", "jake"));
        System.out.println(changeInitial("lava", "java"));
         
    }

}