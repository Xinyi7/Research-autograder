public class WhileToFor {

    public static void main(String[] args) {
        int a = 8;
        int b = 4;
        int i = a;
       
        for(i = a;i > b;i -= 2){
             int c = i - b;
           System.out.println("hi " + i);
           int j = c;
           while (j < a) {
               System.out.println("bye " + j);
               j += 3;
           }
        }
    }
}