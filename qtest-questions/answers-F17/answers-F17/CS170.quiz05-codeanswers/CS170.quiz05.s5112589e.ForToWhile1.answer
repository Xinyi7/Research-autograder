public class ForToWhile {

    public static void main(String[] args) {
        String s = "ForWhile";
        int a = 4;
        int b = s.length()-2;
       while (b > 2) {
            b-=2;
            System.out.println("b=" + b + ": "+ s.charAt(b));
            a++;
            while ( b > 1) {
                b-=3;
                System.out.println("i: " + b);
            }
        }
    }
}