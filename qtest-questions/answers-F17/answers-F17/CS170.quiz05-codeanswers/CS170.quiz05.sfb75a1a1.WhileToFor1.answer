public class WhileToFor {

    public static void main(String[] args) {
        String s = "WhileFor";
        int a = 4;
        int b = s.length() - 2;
           for (int b = s.length){  
            System.out.println("b=" + b + ": "+ s.charAt(b));
            a++;
            int i = b;
             {
                System.out.println("i: " + i);
                i -= 3;
            }
            b -= 2;
        }
    }
     