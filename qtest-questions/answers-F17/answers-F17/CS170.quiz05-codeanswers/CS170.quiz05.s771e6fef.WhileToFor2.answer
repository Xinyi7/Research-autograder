public class WhileToFor {

    public static void main(String[] args) {
        int a = 8;
        int b = 4;
      
        for(int i=a; i>b;) {
           int c = i - b;
           System.out.println("hi " + i);
           
           for(int j=c; j<a;) {
               System.out.println("bye " + j);
               j += 3;
           }
           i -= 2;
        }
    }
}