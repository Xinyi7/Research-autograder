public class RecursiveIsThereEven {

   public static boolean isThereEven(int[] a, int n){
   if(n == 0){
        result = false;
   }else{
        result (a[n-1] % 2 == 0) && isThereEven(a, n-1); 
   }
   return result;
   }
    
    public static void main(String[] args) {
    int[] w = {1, 3, 5};
    int[] x = {1};
    int[] y = {1, 2, 3};
    isThereEven(w, 3);
    isThereEven(x, 1);
    isThereEven(y, 3);
    }

}