public class RecursiveSumProducts {

    public static int sumProducts(int[] x, int[] y, int n) {
        if(n == 0) {
            return 0;
        } else {
            return x[n - 1] * y[n - 1] + sumProducts(x, y, n - 1);
        }
    }
    
    public static void main(String[] args) {
       int[] x = {1, 2, 3};
       int[] y = {4, 5, 6};
       System.out.println(sumProducts(x, y, 3));
    }

}