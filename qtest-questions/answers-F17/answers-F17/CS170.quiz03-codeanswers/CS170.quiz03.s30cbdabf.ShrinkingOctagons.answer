public class ShrinkingOctagons {

    public static void ShrinkingOctagons(Turtle t, double x, int n){
        for(int i = 0; i < n; i++){
            for(int j = 0; j< 8; j++){
              t.forward(x / (i +1));
              t.left( 360.0 / 8);
            }
            t.penup();
            t.forward (2*(x/ (i +1)));
            t.pendown();
        }
    }
    
    public static void main(String[] args) {
        Turtle t = new Turtle();
        ShrinkingOctagons(t, 100,5);
    }

}