public class ShrinkingSquareRose {

    
    public static void main(String[] args) {
       Turtle james = new Turtle();
       shrinkingSquareRose(james, 100, 10, 7);
    }
     public static void shrinkingSquareRose(Turtle t, double x, double delta, int n){
        for (int j=0; j<n; j++){
            for (int i=0; i<4; i++){
                t.forward(x-(j*delta));
                t.left(90);
            }
            t.right(50);
        }
        
     }

}