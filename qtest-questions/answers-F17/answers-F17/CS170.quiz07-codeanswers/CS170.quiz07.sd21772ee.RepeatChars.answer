public class RepeatChars {

    // write your method here
    
    public static void main(String[] args) {
        int[] t1 = {2, 1, 3};

        System.out.println(repeatChars("hey", t1));
        
    }
    public static String repeatChars(String s, int[] k){
        String output="";
        for (int i=0; i<k.length; i++){
            for(int j = 0; j< k[i]; j++){
            output+= ""+s.charAt(i);
            }
        }
        return output;
    }

}