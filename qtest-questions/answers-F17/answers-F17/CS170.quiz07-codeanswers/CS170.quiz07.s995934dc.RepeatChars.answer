public class RepeatChars {

    public static String repeatchars(String s, int[] k) { 
        String result = ""; 
        for( int i =0; i < s.length(); i++ ) {
            result +=  (s.charAt(i));
        }
      
      return result;
    }
    
    public static void main(String[] args) {
        String m = "hey";
        int[] z = {2,1,3};
        System.out.println(repeatchars(m, z)); 
        int[] y = {2,0,1};
        System.out.println(repeatchars(m, y)); 
    }

}