public class Separate {

    public static String seperate(String s, int n){
        return s.substring(0,n) + "-" + s.charAt(n) + "-" + s.substring(n+1);
    }
    
    public static void main(String[] args) {
        System.out.println(seperate("orange",2));
        System.out.println(seperate("whatever",5));
        System.out.println(seperate("hey",0));
        System.out.println(seperate("hey",2));
    }

}