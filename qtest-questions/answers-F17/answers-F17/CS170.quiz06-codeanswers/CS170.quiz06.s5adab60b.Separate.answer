public class Separate {

    public static String separate(String s, int n) {
        String result = "";
       
        result += s.substring(0, n) + "-";
        
      
        result += s.charAt(n) + "-" + s.substring (n+1);
       
    return result;
    }
    
    public static void main(String[] args) {
        System.out.println(separate("orange", 2));
    }

}