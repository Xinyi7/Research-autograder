public class Separate {

    public static String separate(String s, int n){
        String result = "";
        for(int i=0; i < n ; i++){
            result += s.charAt(i);
        }
        result += "-" + s.charAt(n) + "-";
        for(int i=n+1; i<s.length();i++){
            result += s.charAt(i);
        }
        return result;
    }
    
    public static void main(String[] args) {
        System.out.println(separate("orange", 2));
        
    }

}